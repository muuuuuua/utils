{
    "title": "intellij IDE shortcuts",
    "rules": [
        {
            "description": "(intellij IDE) Ctrl+R => Cmd+R (Replace)",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.jetbrains\\.*"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "r",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                        "optional": [
                            "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "r",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "(intellij IDE) Ctrl+E => Cmd+E (Recent Files)",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.jetbrains\\.*"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "e",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                        "optional": [
                            "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "e",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "(intellij IDE) Ctrl+/ => Cmd+/ (Comment)",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.jetbrains\\.*"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "slash",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                        "optional": [
                            "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "slash",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
